    "@angular/router": "~20.3.0",
    "better-sqlite3": "^12.4.1",
    "rxjs": "~7.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "~1.19.1",
    "@analogjs/vitest-angular": "~1.19.1",
    "@angular-devkit/core": "~20.3.0",
    "@angular-devkit/schematics": "~20.3.0",
    "@angular/build": "~20.3.0",
    "@angular/cli": "~20.3.0",
    "@angular/compiler-cli": "~20.3.0",
    "@angular/language-service": "~20.3.0",
    "@eslint/js": "^9.8.0",
    "@nx/angular": "21.6.3",
    "@nx/cypress": "21.6.3",
    "@nx/esbuild": "21.6.3",
    "@nx/eslint": "21.6.3",
    "@nx/eslint-plugin": "21.6.3",
    "@nx/jest": "^21.6.3",
    "@nx/js": "21.6.3",
    "@nx/node": "^21.6.3",
    "@nx/rollup": "21.6.3",
    "@nx/vite": "21.6.3",
    "@nx/web": "21.6.3",
    "@nx/workspace": "21.6.3",
    "@schematics/angular": "~20.3.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
