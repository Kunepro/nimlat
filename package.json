{
  "name": "@nimlat/source",
  "private": true,
  "version": "0.0.0",
  "author": "Nicol√≤ Zanetti",
  "scripts": {
    "build:angular": "nx build nimlat",
    "build:electron": "nx build nimlat-main",
    "electron:serve": "npm run build && electron ./dist/apps/nimlat-main/main.js",
    "build": "npm run build:angular && npm run build:electron",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "main": "dist/apps/nimlat-main/main.js",
  "build": {
    "appId": "com.nimlat",
    "productName": "Nimlat",
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "artifactName": "${productName}.exe"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "icon.ico"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "extraResources": []
  },
  "dependencies": {
    "@angular/common": "~20.3.0",
    "@angular/compiler": "~20.3.0",
    "@angular/core": "~20.3.0",
    "@angular/forms": "~20.3.0",
